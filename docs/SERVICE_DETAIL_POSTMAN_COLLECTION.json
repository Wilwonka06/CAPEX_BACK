    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string",
      "description": "URL base de la API"
    },
    {
      "key": "auth_token",
      "value": "{{jwt_token}}",
      "type": "string",
      "description": "Token JWT para autenticación"
    },
    {
      "key": "service_client_id",
      "value": "1",
      "type": "string",
      "description": "ID del servicio cliente para pruebas"
    },
    {
      "key": "detail_id",
      "value": "1",
      "type": "string",
      "description": "ID del detalle de servicio para pruebas"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
