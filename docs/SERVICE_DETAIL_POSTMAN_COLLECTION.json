            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"serviceClientId\": 1,\n  \"productId\": 1,\n  \"quantity\": 2,\n  \"unitPrice\": 45.00,\n  \"status\": \"En ejecución\"\n}"
